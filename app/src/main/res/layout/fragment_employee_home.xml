        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            card_view:cardCornerRadius="4dp"
            android:elevation="6dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorCellBg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:text="SECURITY CHECK"
                    android:textColor="@color/colorDarkBlack"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/latobold"
                    android:textSize="12sp"/>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="4dp"
                    android:elevation="6dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/securityListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"/>


                        <TextView
                            android:id="@+id/showAllBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="show all"
                            android:paddingTop="5dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/colorTextTheme"
                            android:layout_gravity="end"
                            android:visibility="invisible"/>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="100dp"
                card_view:cardCornerRadius="4dp"
                android:elevation="6dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="TOTAL COLLECTION"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="18dp"
                        android:textColor="@color/colorTextDeepGray"
                        android:fontFamily="@font/latobold"/>

                    <TextView
                        android:id="@+id/collectionAmountTV"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/colorDarkBlack"
                        android:fontFamily="@font/latobold"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorDeepGray"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="100dp"
                card_view:cardCornerRadius="4dp"
                android:elevation="6dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="DUE BALANCE"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginTop="18dp"
                        android:textColor="@color/colorTextDeepGray"
                        android:fontFamily="@font/latobold"/>

                    <TextView
                        android:id="@+id/dueAmountTV"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/colorDarkBlack"
                        android:fontFamily="@font/latobold"/>

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorDeepGray"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1.0">



            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="100dp"
