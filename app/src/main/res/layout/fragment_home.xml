<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightPrimary"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1.0"
                android:background="@drawable/secondlayer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/firstlayer"
                    android:weightSum="1.0"
                    android:gravity="center"
                    >
                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardCornerRadius="50dp"
                        card_view:cardPreventCornerOverlap="false"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:id="@+id/userPhoto"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/image"
                            android:background="@color/colorWhite"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/nameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:gravity="start"
                        android:textSize="@dimen/title_font_size"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorTextTheme"
                        android:fontFamily="@font/latobold"/>
                    <TextView
                        android:id="@+id/emailTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/latoregular"
                        android:gravity="start"
                        android:textColor="@color/colorLightBlack"
                        android:layout_marginTop="2dp"
                        android:textSize="@dimen/default_font_size"
                        />
                    <TextView
                        android:id="@+id/phoneNoTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile No"
                        android:gravity="start"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorGray"
                        android:fontFamily="@font/latoregular"
                        android:layout_marginBottom="10dp"/>






                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingEnd="10dp"
                    android:gravity="center"
                    android:background="@drawable/secondlayer">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/orderRequestedTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latobold"
                            android:gravity="end"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/subtitle_font_size"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="REQUESTED"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:textColor="@color/colorLightWhite"
                            android:fontFamily="@font/latobold"
                            />


                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorBorder"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/partialDeliveredTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latobold"
                            android:gravity="end"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/subtitle_font_size"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="PARTIAL DELIVERED"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:textColor="@color/colorLightWhite"
                            android:fontFamily="@font/latobold"
                            />


                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorBorder"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <LinearLayout
