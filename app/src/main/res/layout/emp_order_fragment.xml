<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorGreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/requestedDOHistory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:gravity="center"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Requested DO History"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorTextTheme"
                    android:textSize="@dimen/default_font_size"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_icon"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorBorder"/>

            <LinearLayout
                android:id="@+id/processedDOHistory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Approved/Processed DO History"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorTextTheme"
                    android:textSize="@dimen/default_font_size"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_icon"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorBorder"/>

            <LinearLayout
                android:id="@+id/trendOrderBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Order Trend Analysis"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorTextTheme"
                    android:textSize="@dimen/default_font_size"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_icon"
                    android:layout_marginRight="5dp"
                    />



            </LinearLayout>



        </LinearLayout>






    </androidx.cardview.widget.CardView>


</LinearLayout>