<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1.0"
    android:descendantFocusability="blocksDescendants"
    >

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical"
                    android:background="#F3F2F1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/bagQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="19:30"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/default_font_size"
                        android:fontFamily="@font/latobold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:text="Bag Qty"
                        android:textSize="@dimen/font_size_small"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/latoregular"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginStart="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/statusBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@color/colorAccent"
                        android:textSize="11sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/latobold"
                        />




                    <TextView
                        android:id="@+id/doNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textColor="@color/colorTextTheme"
                        android:textSize="@dimen/default_font_size"
                        android:fontFamily="@font/latobold"
                        android:paddingStart="3dp"
                        android:paddingTop="5dp"
                        />
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01710000000"
                        android:textSize="@dimen/font_size_medium"
                        android:textColor="@color/colorLightBlack"
                        android:fontFamily="@font/latoregular"
                        android:layout_marginTop="5dp"
                        android:paddingStart="3dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="0.5"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:gravity="end"
                    android:id="@+id/approve_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextTheme"
                    android:textSize="13sp"
                    android:fontFamily="@font/latoregular"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    />


                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Details"
                    android:textColor="#008080"
                    android:textSize="13sp"
                    android:fontFamily="@font/latobold"
                    android:layout_marginTop="30dp"
                    android:gravity="end"
                    android:paddingStart="2dp"
                    android:paddingEnd="10dp" />



                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="#00DB0F0F"-->
                <!--android:gravity="right"-->
                <!--android:text="Not Received" />-->


            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>
